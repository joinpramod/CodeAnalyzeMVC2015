 <script type="text/javascript">
     $(function () {
         $("#dialog").dialog({
             modal: true,
             autoOpen: false,
             title: "jQuery modal popup example",
             width: 500,
             height: 300
         });
         $("#btnShow").click(function () {
             $('#dialog').dialog('open');
         });
     });
</script>
