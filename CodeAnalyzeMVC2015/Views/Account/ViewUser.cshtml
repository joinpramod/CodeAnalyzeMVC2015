
@{
    ViewBag.Title = "ViewUser";
    Layout = "~/Views/Shared/_Layout_NoGoogle.cshtml";
}
@model CodeAnalyzeMVC2015.Users

<h2>My Profile</h2><br />

<div>
@using (Html.BeginForm("Users", "Account", FormMethod.Post))
{
    <table border="0" cellpadding="0" cellspacing="0" style="width: 70%; font-size: 16px">
        <tr align="center" style="width: 100%">
            <td align="right" valign="middle" style="width: 33%;">
                @Html.ActionLink("My Questions", "MyQues", "Account", null, new { style = "text-decoration:underline;color:blue" })
            </td>
            <td align="center" valign="middle" style="width: 33%;text-decoration:underline;">
                @Html.ActionLink("My Answers", "MyAns", "Account", null, new { style = "text-decoration:underline;color:blue" })
            </td>
            <td align="left" valign="middle" style="width: 33%;text-decoration:underline;">
                @Html.ActionLink("My Articles", "MyArts", "Account", null, new { style = "text-decoration:underline;color:blue" })
            </td>
        </tr>
    </table>
    <br />
    <table style="height: 100%; width: 100%; font-size: 16px" cellpadding="4" cellspacing="4">
        <tr>
            <td rowspan="8" valign="top" style="width: 30%">

                <img id="imgProfile" src="@Model.ImageURL" style="height:80%; width:80%" />

            </td>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>First Name:</b>
            </td>
            <td align="left" valign="top">
                @Model.FirstName
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Last Name:</b>
            </td>
            <td align="left" valign="top">
                @Model.LastName
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>EMail:</b>
            </td>
            <td align="left" valign="top">
                @Model.Email
            </td>
        </tr>
        <tr>
            <td align="left" style="width: 25%; font-family: Calibri;" valign="top">
                <b>Address:</b>
            </td>
            <td align="left" valign="top">
                @Model.Address
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Articles Posted:</b>
            </td>
            <td align="left" valign="top">
                @Model.ArticlesPosted
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Questions Posted:</b>
            </td>
            <td align="left" valign="top">
                @Model.QuestionsPosted
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Replies Posted:</b>
            </td>
            <td align="left" valign="top">
                @Model.AnswersPosted
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Details:</b>
            </td>
            <td align="left" valign="top">
                @Model.Details
            </td>
        </tr>
        <tr>
            <td align="center" colspan="3">
                <input type="submit" name="Edit" value="Edit Profile" style="border: none; background-color: #4fa4d5; color: white; font-size: 16px; width: 15%" />
                <input type="submit" name="ChangePassword" value="Change Password" style="border: none; background-color: #4fa4d5; color: white; font-size: 16px; width: 20%" />
            </td>
        </tr>
        
    </table>
}
</div>

