
@{
    ViewBag.Title = "ViewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CodeAnalyzeMVC2015.Users


<div>

    <table border="0" cellpadding="0" cellspacing="0" style="width: 70%; font-size: 16px">
        <tr align="center" style="width: 100%">
            <td align="right" valign="middle" style="width: 33%">
                @Html.ActionLink("My Questions", "MyQues", "Home");
            </td>
            <td align="center" valign="middle" style="width: 33%">
                @Html.ActionLink("My Answers", "MyAns", "Home");
            </td>
            <td align="left" valign="middle" style="width: 33%">
                @Html.ActionLink("My Articles", "MyArts", "Home");
            </td>
        </tr>
    </table>

    <table style="height: 230px; width: 100%; font-size: 16px" cellpadding="4" cellspacing="4">
        <tr>
            <td rowspan="8" valign="top">

                <img id="imgProfile" src="@Model.ImageURL" style="height: 140px; width: 100%" />

            </td>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>First Name:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.FirstName)
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Last Name:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.LastName)
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>EMail:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.Email)
            </td>
        </tr>
        <tr>
            <td align="left" style="width: 25%; font-family: Calibri;" valign="top">
                <b>Address:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.Address)
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Articles Posted:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.ArticlesPosted)
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Questions Posted:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.QuestionsPosted)
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Replies Posted:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.AnswersPosted)
            </td>
        </tr>
        <tr>
            <td align="left" valign="top" style="width: 25%; font-family: Calibri;">
                <b>Details:</b>
            </td>
            <td align="left" valign="top">
                @Html.LabelFor(m => m.Details)
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td style="padding-left: 20%" colspan="3" valign="top">
                <tabel>
                    <tr>
                        <td colspan="2" align="center">
                            @using (Html.BeginForm("Users", "Account", Model))
                            {
                                <input type="submit" value="Edit Profile" style="border: none; background-color: #4fa4d5; color: white; font-size: 16px; width: 35%" />
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm("ChangePassword", "Home"))
                            {
                                <input type="submit" value="Change Password" style="border: none; background-color: #4fa4d5; color: white; font-size: 16px; width: 30%" />
                            }
                        </td>
                    </tr> 
                </tabel>
            </td>
        </tr>
    </table>


</div>

