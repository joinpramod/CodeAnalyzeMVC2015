
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout_NoGoogle.cshtml";
}

@model CodeAnalyzeMVC2015.Users
@using CodeAnalyzeMVC2015.AppCode

<script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>
<script src="~/js/Facebook.js"></script>
<script src="~/js/Google.js"></script>

<script type="text/javascript" src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js"></script>

 @if (Model.Email == null || ViewBag.Ack != null)
 {
<h2>Register</h2><br />
 }
 else
 {
    <h2>Edit Profile</h2><br />    <br />
 }


<table style="font-size:16px;font-family:Calibri;width:100%">
    @if (Model.Email == null || ViewBag.Ack != null)
    {
                    <tr>    
                        <td style="padding-top: 5px;"> 
                            <b>Register by any of the following options</b><br /><br />
                         </td>
                    </tr> 
                    <tr>
                        <td style="padding-top: 5px;padding-left:30px">                           
                            <input type="image" onclick="FaceBookLogin()" value="FaceBook" style="height:35px;width:200px" src="~/Images/SignInWithFacebook.png" />
                        </td>
                    </tr> 
                    <tr><td>&nbsp</td></tr>
                    <tr>
                        <td style="padding-top: 5px;padding-left:30px">                           
                            <div id="my-signin2"></div>
                        </td>
                    </tr>
    }
                    <tr>
                        <td style="font-weight: bold; color: red;padding-left:30px">
                            @ViewBag.Ack
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 5px;padding-left:20px">
                            @using (Html.BeginForm("CreateEditUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                            <table style="height: 250px; width: 80%;border:solid;border-radius:10px;border-width:1px;border-color:lightgrey" cellpadding=5; cellspacing=5>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(m => m.FirstName, new { style = "width:55%;", placeholder="First Name", @class="myText"})
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(m => m.LastName, new { style = "width:55%;", placeholder="Last Name", @class="myText"})
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(m => m.Email, new { style = "width:75%;", placeholder="EMail", @class="myText" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(m => m.Address, new { style = "width:75%;", placeholder="Address", @class="myText"})
                                    </td>
                                </tr>
                                 @if (Model.Email == null || ViewBag.Ack != null)
                                {
                                <tr>
                                    <td>
                                        @Html.Password("txtPassword", "", new { style = "width:55%;", placeholder="Password", @class="myText"})
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.Password("txtConfirmPassword", "", new { style = "width:55%;", placeholder="Confirm Password", @class="myText"})
                                    </td>
                                </tr>
                                }
                                <tr>
                                    <td>
                                        <input type="file" style="width: 50%" class="myText" id="fileUserPhoto" name="fileUserPhoto" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.TextAreaFor(m => m.Details, new {style="height:160px;width:90%", @class="myText" 
                                                 placeholder="Brief details on your experience, work and expertiece"})
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center">
                                        <img id="imgcaptcha" alternatetext="Captcha" />
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center">
                                        @if (Model.Email == null || ViewBag.Ack != null)
                                        {
                                            @Html.GenerateCaptcha(Theme.White)
                                        }
                                    </td>
                                </tr>
                                 <tr><td>&nbsp;</td></tr>
                                <tr>
                                    <td align="center">
                                        <input type="submit" id="btnRegister" value="Submit" onclick="return ValidateUserReg()" class="mysubmit" />
                                        <input type="submit" id="btnCancel" name="Cancel" value="Cancel" class="mysubmit" />

                                    </td>
                                </tr>
                                 <tr><td>&nbsp;</td></tr>
                            </table>
                            }
                        </td>
                    </tr>
                </table>
