@{
    ViewBag.Title = "Code Analyze - Blogger Rewards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CodeAnalyzeMVC2015.Models.QuestionType

<script type="text/javascript" src="~/Scripts/tinymce/tinymce.min.js"></script>
<script type="text/javascript" src="~/js/JavaScript1.js"></script>
<script type="text/javascript" src="~/js/TinyMCE.js"></script>


<h2>Post Question</h2>
<span style="font-weight:bold;font-size:18px;color:orangered"> Join coders like you and keep getting Amazon Gift Card Emails from us</span>
<br /><br />

@using (Html.BeginForm("InsertQuestion", "Que", FormMethod.Post))
{
<table style="width:100%; font-size:16px" cellpadding="0"
       cellspacing="0">
    <tr>
        <td>
            <table align="left" style="width: 100%">
                <tr>
                    <td colspan="2" align="center" style="color:green;font-weight:bold">
                        @Html.Raw(ViewBag.Ack)                                              
                    </td>
                </tr>

                @*<tr>
                    <td colspan="2" align="center">
                        Post Your Question                        
                    </td>
                </tr>*@
                
                <tr>
                    <td style="font-family: Calibri;" align="center">
                        Title:<span style="font-family:Calibri; font-size:16px;color:Red">*</span>
                    </td>
                    <td>
                        @Html.TextBox("txtTitle", "", new {style="width:98%;height:30px;border:groove;border-width:1px" })
                    </td>
                </tr>
                <tr>
                    <td style="font-family: Calibri;" align="center">
                        Type:<span style="font-family:Calibri; font-size:16px;color:Red">*</span>
                    </td>
                    <td>
                        @Html.DropDownList("ddType", new SelectList(Model.Types, "TypeId", "Type"), "---Select---")
                        
                    </td>
                </tr>
                <tr>
                    <td style="font-family: Calibri;" align="center">
                        Details:<span style="font-family:Calibri; font-size:16px;color:Red">*</span>
                    </td>
                    <td align="left">
                        Insert code between <b>#codestart</b> and <b>#codeend</b> tags to highlight it correctly.<br />
                            <pre class="prettyprint" style="width:28%;text-align:left;white-space: pre-line;">
                            #codestart
                            your code here
                            #codeend
                        </pre>
                        @Html.TextArea("EditorAskQuestion")
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="2"><br/>
                        <input type="submit" value="Post Question" id="btnSubmit" onclick="return ValidateQues()"
                                class="mysubmit" />
                    </td>
                </tr>                
            </table>
        </td>
    </tr>
</table>
@Html.Hidden("hfUserEMail", (object)ViewBag.UserEMail)
}

