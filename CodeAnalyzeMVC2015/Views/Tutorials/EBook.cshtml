
@{
    ViewBag.Title = "EBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EBook</h2>
<br/><br/>
@model System.Data.DataTable
<ul>
    @foreach (System.Data.DataRow dr in Model.Rows)
    {
        <li>
            <a href='@dr["URL"]'>
                <p>                    
                    <span style="font-family:Calibri;font-size:16px;font-weight:bold">@dr["Title"]</span>                    
                </p>
                @Html.Raw(dr["ImageURL"])
            </a>
            <p>Updated Date - <b>@dr["DateTime"]</b></p>

        </li>
        <li>&nbsp;</li>
    }
</ul>